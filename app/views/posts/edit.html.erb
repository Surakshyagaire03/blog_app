<h1 class="mb-4">Edit Post</h1>

<!-- Display validation errors -->
<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= pluralize(@post.errors.count, "error") %> prevented this post from being saved:</h5>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label fw-bold" %>
    <%= f.text_field :title, class: "form-control form-control-lg", placeholder: "Post title...", required: true %>
  </div>

  <div class="mb-4">
    <%= f.label :content, class: "form-label fw-bold" %>
    <%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Write your post here...", required: true %>
  </div>

  <div class="d-flex gap-3">
    <%= f.submit "Update Post", class: "btn btn-primary btn-lg px-5" %>
    <%= link_to "Cancel", post_path(@post), class: "btn btn-outline-secondary btn-lg px-5" %>
  </div>
<% end %>
